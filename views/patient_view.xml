<odoo>
    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">patient.form</field>
        <field name="model">patient</field>
        <field name="arch" type="xml">
            <form string="Patient Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="gender"/>
                        <field name="doctor_id"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">patient.tree</field>
        <field name="model">patient</field>
        <field name="arch" type="xml">
            <tree string="Patient List">
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="doctor_id"/>
            </tree>
        </field>
    </record>

    <record id="action_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">patient</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="menu_management" name="Hospital Management" sequence="1"/>
    <menuitem id="menu_patient" name="Patients" parent="menu_management" action="action_patient"/>
</odoo>
